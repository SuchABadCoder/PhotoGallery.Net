@using PhotoGallery.Models
@{
    ViewBag.Title = "ViewPhoto";
}
@model Photo

<div class="row justify-content-center">
    <div class="col">
        <div style="height: 30vh; width: 30vh;">
            @Html.Raw("<img style=\"width: 50 %; height: 50 %; \" src=\"data:image/jpeg;base64,"
                                          + Convert.ToBase64String(Model.Image) + "\" />")
            <p>@Model.Description</p>
            @if (Model.OwnerName == ViewContext.HttpContext.User.Identity.Name)
            {//ViewContext.HttpContext.User.IsInRole("admin")
                @Html.ActionLink("Delete", "Delete", "ViewPhoto", routeValues: new { photoId = Model.Id }, htmlAttributes: new { @class = "btn btn-block btn-dark btn-sm m-1" })//сделать контроллер
            }
        </div>
    </div>
</div>