@using PhotoGallery.Models
@{
    ViewBag.Title = "ViewPhoto";
}
@model Photo

<div class="row justify-content-center">
    <div class="col">
        <div style="height: 30vh; width: 30vh;">
            @Html.Raw("<img style=\"max - width: 50 %; max - height: 50 %; \" src=\"data:image/jpeg;base64,"
                                          + Convert.ToBase64String(Model.Image) + "\" />")
            <p>@Model.Description</p>
        </div>
        @if (ViewContext.HttpContext.User.IsInRole("admin"))
        {
            @Html.ActionLink("Delete", "Delete", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-block btn-dark btn-sm m-1" }) //сделать контроллер
        }
        </div>
</div>