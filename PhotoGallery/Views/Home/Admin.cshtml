@using PhotoGallery.Models;
@{
    ViewBag.Title = "Admin Page";
}
@model List<Photo>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Description</th>
            <th>Category</th>
            <th>Owner</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var photo in Model)
         { 
            <tr id="@photo.Id">
                <td>@Html.Raw("<img style=\"width: 30px; height: 30px; \" src=\"data:image/jpeg;base64," + Convert.ToBase64String(photo.Image) + "\" />")</td>
                <td>@photo.Description</td>
                <td>@photo.Category.Name</td>
                <td>@photo.OwnerName</td>
                <td><a href="" style="color: white; text-decoration: none" onclick="Delete(@photo.Id)">Delete</a></td>
            </tr>
         }
    </tbody>
</table>

<script type="text/javascript">
    function Delete(id) {
        $.ajax({
            url: "@Url.Action("Delete", "Home")",
            type: "POST",
            data: {
                'id': id
            },
            dataType: 'json',
            success: function () {
                $('#' + id).remove();
                location.reload();
            }
        });
    }
</script>